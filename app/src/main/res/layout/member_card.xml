<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <android.support.v7.widget.CardView
        android:paddingVertical="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        android:padding="16dp"
        app:cardBackgroundColor="@color/dark_green"
        app:cardCornerRadius="3dp"
        app:cardUseCompatPadding="true"
        app:elevation="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mem_photo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/user_img"
                />

            <TextView
                android:textColor="@color/nice_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mem_name"
                android:text="John Doe"
                android:layout_toRightOf="@+id/mem_photo"
                android:textSize="30sp"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/lastVisit"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_alignBaseline="@id/checkinTime"
                android:layout_toRightOf="@id/checkinTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Visit 09/18 (115 days)"
                android:textSize="15sp"
                />

            <TextView
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mem_points"
                android:text="100 pts"
                android:layout_below="@+id/mem_name"
                />

            <TextView
                android:id="@+id/checkinTime"
                android:layout_marginLeft="20dp"
                android:layout_alignBaseline="@id/mem_points"
                android:textSize="15sp"
                android:text="Checked in: 8:00 am"
                android:textColor="@color/white"
                android:layout_toRightOf="@id/mem_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:id="@+id/checkoutBtn"
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:background="@drawable/round_corner_bg"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="Check out"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>