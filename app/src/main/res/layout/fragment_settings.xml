<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/vert_grad_cool"
    android:paddingHorizontal="30dp"
    >
    <TextView
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/settingsLabel"
        android:textColor="@color/white"
        android:id="@+id/apiUrlLabel"
        android:text="API URL"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:background="@drawable/round_corner_bg_outline"
        android:textColor="@color/white"
        android:id="@+id/apiText"
        android:textColorHint="@color/white"
        android:hint="https://someurl.com"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:imeOptions="actionNext"
        />

    <TextView

        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/settingsLabel"
        android:textColor="@color/cornsilk"
        android:text="Termnal Settings"
        android:textSize="22sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/settingsLabel"
        android:textColor="@color/white"
        android:text="Comm Type"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:backgroundTint="@color/white"
        android:layout_marginTop="20dp"
        android:id="@+id/commType"
        android:popupBackground="@color/cool_grad_1"
        android:entries="@array/comm_types"
        android:layout_width="400dp"
        android:layout_height="50dp"/>

    <EditText
        android:visibility="gone"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:background="@drawable/round_corner_bg_outline"
        android:textColor="@color/white"
        android:id="@+id/terminalCommType"
        android:textColorHint="@color/white"
        android:layout_width="400dp"
        android:layout_height="40dp" />

    <TextView
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/settingsLabel"
        android:textColor="@color/white"
        android:text="Terminal Ip"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:background="@drawable/round_corner_bg_outline"
        android:textColor="@color/white"
        android:id="@+id/terminalIp"
        android:textColorHint="@color/white"
        android:hint="0.0.0.0"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:imeOptions="actionNext"
        />

    <TextView
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/settingsLabel"
        android:textColor="@color/white"
        android:text="Processor Host"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:background="@drawable/round_corner_bg_outline"
        android:textColor="@color/white"
        android:id="@+id/terminalHost"
        android:textColorHint="@color/white"
        android:hint=""
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:imeOptions="actionDone"
        />

    <TextView
        android:id="@+id/saveBtn"
        android:textColor="@color/cool_grad_2"
        android:layout_marginTop="30dp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:background="@drawable/round_corner_bg"
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/testSocketBtn"
        android:textColor="@color/cool_grad_2"
        android:layout_marginTop="30dp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:background="@drawable/round_corner_bg"
        android:text="Test Socket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>